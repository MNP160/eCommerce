@model eCommerceFrontend.Models.View.Home_Model.IndexView

@{
    ViewData["Title"] = "Home Page";
}
<div class="main-container">

    <sidenav>
        @{ await Html.RenderPartialAsync("Shared/_sidenav", Model); }
    </sidenav>

    <main>
        @foreach(var category in Model.SelectedCategories)
        {
        <text>
                <div class="container-fluid">
                    <h2 class="border-bottom border-top p-4" style="margin-top:20px;">@category.Name</h2> <br />
                    <div class="row">
                        @foreach (var product in category.Products)
                        {
                            <text>
                            <div class="card col-sm-6 col-md-3 col-lg-3 " style="height:auto">
                                @{ await Html.RenderPartialAsync("Shared/_productCard", product); }
                            </div>
                            <div class="card col-sm-6 col-md-3 " style="height:auto">
                                @{ await Html.RenderPartialAsync("Shared/_productCard", product); }
                            </div>
                            <div class="card col-sm-6 col-md-3 " style="height:auto">
                                @{ await Html.RenderPartialAsync("Shared/_productCard", product); }
                            </div>
                            </text>
                        }
                    </div>
                </div>
        </text>
        }

        

    </main>
</div>


<style>
    .main-container {
        display: grid;
        grid-template-areas: "nav content";
        grid-template-columns: 250px 1fr ;
        grid-template-rows: auto 1fr;
        grid-gap: 10px;
        height: 100vh;
    }

    sidenav {
        grid-area: nav;
        margin-left: 0.0rem;
    }

    main {
        grid-area: content;
        width: 100%;
        height: 100%;
        padding-right: 17px; /* Increase/decrease this value for cross-browser compatibility */
        box-sizing: content-box; /* So the width will be 100% + 17px */
        overflow-y: scroll;

    }

    ::-webkit-scrollbar {
        display: none;
    }

    @@media (max-width: 768px) {
      .main-container {
        grid-template-areas:
          "content";

        grid-template-columns: 1fr;
        grid-template-rows:

          1fr /* Content */
      }

      sidenav{
        margin: 0;
      }
}
</style>
