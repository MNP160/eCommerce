@model eCommerceFrontend.Models.View.Admin_Model.AdminView
@using Newtonsoft.Json

<div class="row col-auto text-center">
    <div class="col">
        <a asp-controller="Admin" asp-action="ViewCategory" class="btn btn-primary text-white">Categories</a>
        <a asp-controller="Admin" asp-action="ViewProduct" class="btn btn-primary text-white">Products</a>
    </div>
</div>

<br />

@if (Model.AcceptedOrders.Count > 0)
{
    <h3>Accepted:</h3>
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Email:</th>
                <th scope="col">Address:</th>
                <th scope="col">Phone:</th>
                <th scope="col">Items:</th>
                <th scope="col">Cash Payment</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.AcceptedOrders)
            {
                <text>
                    <tr>
                        <td>@order.OrderEmail</td>
                        <td>@order.Address, @order.Address2, @order.OrderZipCode, @order.City</td>
                        <td>+(359)@order.Phone</td>
                        <td><a asp-controller="Admin" asp-action="ViewOrderItems" asp-route-order="@order.Id">Items</a></td>
                        <td>@order.Stage</td>
                        <td>
                            <a asp-controller="Admin" asp-action="MoveForward" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Forward</a>
                        </td>
                    </tr>
                </text>
            }
        </tbody>
    </table>
}

