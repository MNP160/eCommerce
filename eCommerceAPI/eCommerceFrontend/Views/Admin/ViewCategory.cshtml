@model IEnumerable<eCommerceFrontend.Models.REST.Objects.Cathegory.CathegoryResponse>

@{
    ViewData["Title"] = "ViewCategory";
}

<h1>ViewCategory</h1>


<div class="row">
    <div class="col-sm-12 col-md-6">
        <form asp-controller="Admin" asp-action="AddCategory" class="form-inline">
            <div class="form-group ">
                <input name="name" type="text" placeholder="Category Name" class="form-control" />
                <input type="submit" value="Create Category" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
    </tbody>
</table>